<%= provide(:title, 'Home') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Home</h1>
    
    <br />
    <h2><%= link_to "Sign up", signup_path %></h2>
    
    <br />
    <% if logged_in? %>
      <h2><%= link_to "Log out", logout_path, method: :delete %></h2>
    <% else %>
      <h2><%= link_to "Log in", login_path %></h2>
    <% end %>
  </div>
</div>
